<editor>
    <formElement>
        <type>entry</type>
        <label>Configuration:</label>
        <property>config</property>
        <required>1</required>
        <documentation>Unique name for the plugin configuration.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Description:</label>
        <property>desc</property>
        <required>0</required>
        <documentation>Description for the plugin configuration.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>The Docker Endpoint:</label>
        <property>endpoint</property>
        <required>1</required>
        <documentation>The endpoint at which docker REST API will be reachable. Must be a IP address or a resolvable DNS name.</documentation>
    </formElement>
    <formElement>
        <type>credential</type>
        <label>CA Certificate:</label>
        <property>cacert</property>
        <required>0</required>
        <passwordLabel>CA Cert:</passwordLabel>
        <credentialType>key</credentialType>
        <documentation>Certificate used to check authenticity of Docker server.</documentation>
        <attachedAsParameterToStep>createAndAttachCredential,testConnection</attachedAsParameterToStep>
    </formElement>
    <formElement>
        <type>credential</type>
        <label>Client Certificate:</label>
        <property>cert</property>
        <required>0</required>
        <passwordLabel>Certificate:</passwordLabel>
        <credentialType>key</credentialType>
        <documentation>Public key of key pair used by Docker client to authenticate itself with Docker server.</documentation>
        <attachedAsParameterToStep>createAndAttachCredential,testConnection</attachedAsParameterToStep>
    </formElement>
    <formElement>
        <type>credential</type>
        <label>Client Private Key:</label>
        <property>key</property>
        <required>0</required>
        <passwordLabel>Private Key:</passwordLabel>
        <credentialType>key</credentialType>
        <documentation>Private key of key pair used by Docker client to authenticate itself with Docker server.</documentation>
        <attachedAsParameterToStep>createAndAttachCredential,testConnection</attachedAsParameterToStep>
    </formElement>
    <formElement> 
        <label>Test Connection:</label>    
        <property>testConnection</property> 
        <documentation>Check this checkbox to verify connectivity to docker swarm manager.</documentation> 
        <type>checkbox</type>   
        <checkedValue>true</checkedValue> 
        <uncheckedValue>false</uncheckedValue> 
        <initiallyChecked>0</initiallyChecked> 
        <value>true</value> 
        <required>1</required>
    </formElement> 
    <formElement>
        <type>select</type>
        <label>Log Level:</label>
        <property>logLevel</property>
        <value>2</value>
        <option>
            <name>Debug</name>
            <value>1</value>
        </option>
        <option>
            <name>Info</name>
            <value>2</value>
        </option>
        <option>
            <name>Warning</name>
            <value>3</value>
        </option>
        <option>
            <name>Error</name>
            <value>4</value>
        </option>
        <documentation>Log level to use for logging output. Error=4, Warning=3, Info=2, Debug=1.</documentation>
        <required>0</required>
    </formElement>
</editor>
